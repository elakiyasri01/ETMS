@model IEnumerable<Employee_TMS.Entities.Report>

@{
    ViewData["Title"] = "GetReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null || !Model.Any())
{
    <h1>No reports found</h1>
}
else{
<h1>Report for @ViewBag.EmployeeId 
</h1>


<a class="btn btn-primary"  href="EditEmployee?EmployeeId=@ViewBag.EmployeeId">Edit Employee</a>
<a class="btn btn-danger" href="DeleteEmployee?EmployeeId=@ViewBag.EmployeeId">Delete Employee</a>
<div class="report-section">
   
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Worked Hours</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reportEntry in Model)
            {
                <tr>
                    <td>@reportEntry.CheckIn?.ToString("yyyy-MM-dd")</td>
                    <td>@reportEntry.CheckIn?.ToString("HH:mm:ss")</td>
                    <td>@reportEntry.CheckOut?.ToString("HH:mm:ss")</td>
                    <td>@reportEntry.WorkedHours?.ToString("hh\\:mm\\:ss")</td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>
<button type="button" onclick="history.back()">Go Back</button>
}